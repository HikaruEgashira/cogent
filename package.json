{
    "name": "autopilot",
    "displayName": "Copilot Agent Mode",
    "description": "Autopilot is a Copilot extension that gives it agenting capabilities like executing commands, editing and reading files, and more.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.95.0"
    },
    "categories": [
        "Other",
        "AI"
    ],
    "icon": "assets/Autopilot.jpeg",
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Autopilot",
            "properties": {
                "autopilot.use_full_workspace": {
                    "type": "boolean",
                    "default": true,
                    "description": "Include full workspace content in the initial prompt. If disabled, files will be read on demand."
                }
            }
        },
        "chatParticipants": [
      {
        "id": "autopilot.assistant",
        "name": "Autopilot",
        "description": "AI-powered development assistant",
        "isSticky": true
      }
    ],
        "languageModelTools": [
            {
                "name": "autopilot_writeFile",
                "tags": ["files", "create"],
                "displayName": "Create New File",
                "modelDescription": "Create a new file in the workspace with specified content",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string",
                            "description": "Relative path for the new file"
                        },
                        "content": {
                            "type": "string",
                            "description": "The full text content to write into the file"
                        }
                    },
                    "required": ["path", "content"]
                }
            },
            {
                "name": "autopilot_updateFile",
                "tags": ["files", "update"],
                "displayName": "Update File",
                "modelDescription": "Update an existing file in the workspace with new content",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string",
                            "description": "Relative path to the file"
                        },
                        "content": {
                            "type": "string",
                            "description": "New content for the file"
                        }
                    },
                    "required": ["path", "content"]
                }
            },
            {
                "name": "autopilot_runCommand",
                "tags": ["terminal", "command"],
                "displayName": "Run Command",
                "modelDescription": "Execute a command in the VS Code terminal",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "command": {
                            "type": "string",
                            "description": "Command to execute"
                        }
                    },
                    "required": ["command"]
                }
            },
            {
                "name": "autopilot_readFile",
                "tags": ["files", "read"],
                "displayName": "Read File",
                "modelDescription": "Read the contents of multiple files in the workspace",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "paths": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "description": "Relative path to the file"
                            },
                            "description": "Array of file paths to read"
                        }
                    },
                    "required": ["paths"]
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "dependencies": {
        "@vscode/prompt-tsx": "^0.3.0-alpha.12"
    },
    "devDependencies": {
        "@types/node": "^20.17.10",
        "@types/vscode": "^1.95.0",
        "@types/mocha": "^10.0.9",
        "@typescript-eslint/eslint-plugin": "^8.10.0",
        "@typescript-eslint/parser": "^8.7.0",
        "eslint": "^9.13.0",
        "typescript": "^5.6.3",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1"
    }
}
